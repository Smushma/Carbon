<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tracking.SplashScreenActivity"
    android:background="#296d98">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="205dp"
        android:layout_height="163dp"
        android:layout_marginTop="152dp"
        android:src="@drawable/splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSplashLogo"
        android:transitionName="title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Carbon"
        android:textAlignment="center"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
 />

    <TextView
        android:id="@+id/tvSplashSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clearing the air"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSplashLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>